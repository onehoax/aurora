/*
===============================================================
=================== User / DB Creation ========================
===============================================================

NOTE: `process.env` only works in later versions of mongodb (> 6).
*/

db.createUser({
  user: process.env.USERNAME,
  pwd: process.env.PWD,
  roles: [
    {
      role: "readWrite",
      db: process.env.DB_NAME,
    },
  ],
});
